import java.util.Scanner;
public class Main {
	public static void main(String[] args) {
		Scanner victoria=new Scanner(System.in);
		int total=0,item;
		System.out.println("DO YOU WANT TO MAKE AN ORDER?\n[1]YES    [2]NO");
		int a=victoria.nextInt();
		while(a==1){
		    System.out.println("SELECT FOR CATEGORIES BELOW:");
		    System.out.println("[1]FOODS\n[2]SNACKS\n[3]BEVERAGES");
		    int ctgry=victoria.nextInt();
		    
		    if(ctgry==1){
		        System.out.println("--YOU SELECTED FOODS--");
		        //FOOD CHOICES//
		       System.out.println("[1]LECHON BELLY: $60");
		       System.out.println("[2]ADOBO: $25");
		       System.out.println("[3]CALAMARES: $30");
		       System.out.println("[4]FRIED CHICKEN: $15");
		       System.out.println("[5]FISH TINOLA: $25");
		       
		        System.out.println("ENTER ITEM:");
		        item=victoria.nextInt();
		        //FOOD PRICES//
		        if (item==1){
		            System.out.println("YOU SELECTED 1pc LECHON BELLY");
		            total=total+60;
		            }else if (item==2){
		            System.out.println("YOU SELECTED 1pc ADOBO");
		            total=total+25;
		            }else if (item==3){
		            System.out.println("YOU SELECTED 1pc CALAMARES");
		            total=total+30;
		            }else if (item==4){
		            System.out.println("YOU SELECTED 1pc FRIED CHICKEN");
		            total=total+15;
		            }else if (item==5){
		            System.out.println("YOU SELECTED 1pcFISH TINOLA");
		            total=total+25;
		            }else{
		                System.out.println("INVALID KEY");
		            }
		        
		    }else if(ctgry==2){
		        System.out.println("--YOU SELECTED SNACKS--");
		        //SNACKS CHOICES//
		       System.out.println("[1]BURGER: $25");
		       System.out.println("[2]SPAGHETTI: $20");
		       System.out.println("[3]PIZZA: $30");
		       System.out.println("[4]ICE CREAM: $10");
		       System.out.println("[5]FRENCH FRIES: $20");
		        //SNACKS PRICES//
		        System.out.println("ENTER ITEM:");
		        item=victoria.nextInt();
		        if (item==1){
		            System.out.println("YOU SELECTED 1pc BURGER");
		            total=total+25;
		            }else if (item==2){
		            System.out.println("YOU SELECTED 1pc SPAGHETTI");
		            total=total+20;
		            }else if (item==3){
		            System.out.println("YOU SELECTED 1pc PIZZA");
		            total=total+30;
		            }else if (item==4){
		            System.out.println("YOU SELECTED 1pc ICE CREAM");
		            total=total+10;
		            }else if (item==5){
		            System.out.println("YOU SELECTED 1pc FRENCH FRIES");
		            total=total+20;
		            }else{
		                System.out.println("INVALID KEY");
		            }
		    }else if(ctgry==3){
		        System.out.println("--YOU SELECTED BEVERAGES--");
		        //BEVERAGE CHOICES//
		       System.out.println("[1]WATER: $20");
		       System.out.println("[2]NESTEA: $40");
		       System.out.println("[3]COKE: $25");
		       System.out.println("[4]ROYAL: $25");
		       System.out.println("[5]BEER: $105");
		       //BEVERAGE PRICES//
		       System.out.println("ENTER ITEM:");
		        item=victoria.nextInt();
		        if (item==1){
		            System.out.println("YOU SELECTED 1pc WATER");
		            total=total+20;
		            }else if (item==2){
		            System.out.println("YOU SELECTED 1pc NESTEA");
		            total=total+40;
		            }else if (item==3){
		            System.out.println("YOU SELECTED 1pc COKE");
		            total=total+25;
		            }else if (item==4){
		            System.out.println("YOU SELECTED 1pc ROYAL");
		            total=total+25;
		            }else if (item==5){
		            System.out.println("YOU SELECTED 1pc BEER");
		            total=total+105;
		            }else{
		                System.out.println("INVALID KEY");
		            }
		    }else{
		        System.out.println("INVALID KEY.");
		    }
		    System.out.println("DO YOU WANT TO MAKE ANOTHER PURCHASE?\n[1]YES    [2]NO");
		    a=victoria.nextInt();
		}
		System.out.println("TOTAL PURCHASE:"+total);
	}
}
 
